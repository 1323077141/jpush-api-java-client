<?xml version="1.0" encoding="utf-8"?>
<project name="jpush-create-app" basedir="." default="use">
	<property name="jpush.client.version" value="3.0.2" />
	<property name="src.dir" value="${basedir}/../src" />
	<property name="libs.dir" value="${basedir}/../libs" />
	<property name="dist.dir" value="${basedir}/dist" />
	<property name="classes.dir" value="${basedir}/classes" />
	<property name="jpush.lib" value="${dist.dir}/jpush-${jpush.client.version}.jar" />
	
	<!-- Modify following two to your jpush account's dev_key and dev_secret  -->
	<property name="jpush_dev_key" value="903724367fadb34e4820b6e0" />
	<property name="jpush_dev_secret" value="f1b45af26e90e332210dc52f" />
    
	<path id="lib_classpath">
		<fileset dir="${libs.dir}">
			<include name="*.jar" />
		</fileset>
	</path>
	
	<target name="clean" description="Delete all generated files">
		<delete dir="${classes.dir}" failonerror="false" />
		<delete file="${jpush.lib}" />
	</target>

	<target name="compile" description="Compiles the Task">
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" includeantruntime="on">
			<classpath refid="lib_classpath" />
		</javac>
		<copy todir="${classes.dir}">
			<fileset dir="${basedir}/../resources">
				<include name="**/*.properties" />
				<include name="**/*.xml" />
			</fileset>
		</copy>
	</target>

	<target name="jar" description="JARs the Task" depends="compile">
		<jar destfile="${jpush.lib}" basedir="${classes.dir}" />
	</target>

	<target name="use" description="Use the Task" depends="jar">
		<taskdef name="create-app" 
		    classname="cn.jpush.api.tools.AppCreateAntTask" 
		    classpath="${jpush.lib}" 
		    classpathref="lib_classpath" />
		<create-app app_name="Test4" 
			android_package="com.example.test4"
			group_name="group1" />
		<echo message="app_key:${jpush_app_key}, 
			android_package:${jpush_android_package}, 
			is_new_created:${jpush_is_new_created}" />
	</target>
</project>

